@model List<SistemaAnimalMVC.Models.Animal>

<h2>Animal</h2>

<a asp-action="Criar" class="btn btn-primary">Animal</a>

<table class="table mt-3">
    <tr>
        <th>Nome</th>
        <th>Som</th>
        <th>Tipo Alimentacao </th>
        <th>Acoes</th>
    </tr>

    @foreach(var animal in Model)
    {
        <tr>
            <td>@animal.Nome</td>
            <td>@animal.EmitirSom()</td>
            <td>@animal.TipoAlimentacao()</td>
            <td>
                <a asp-action="Deletar" asp-route-id="@animal.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
    }
</table> 